<Window x:Class="U_DiskId.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="100" Width="160"
        WindowStyle="None" ResizeMode="NoResize" Background="{x:Null}" AllowsTransparency="True" WindowStartupLocation="Manual">
    <Grid>
        <Border CornerRadius="5" Margin="0" BorderThickness="1" BorderBrush="LightBlue" Opacity="0.3">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="LightBlue" BlurRadius="3"/>
            </Border.Effect>
            <Border Background="Black" Opacity="0.6" Margin="10" CornerRadius="3"/>
        </Border>
        <Grid MouseDown="Window_MouseDown">
            <TextBlock Name="U_Name" Text="" Foreground="#FF00A8EC" FontSize="48" VerticalAlignment="Center" Margin="20"/>
            <Image Name="u_icon" Width="80" Height="80" Source="/Images/u.png" MouseDown="OpenUDisk" HorizontalAlignment="Right" Margin="20 0"/>
        </Grid>
    </Grid>
</Window>
